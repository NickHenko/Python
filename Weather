from pyowm.owm import OWM
from pyowm.utils.config import get_default_config
from colorama import Fore
config_dict = get_default_config()
config_dict['language'] = 'en'  # your language here, eg. French



import pyowm

city = input('What city do you want to know the weather in?: ')

owm = pyowm.OWM('e74ce1713196301e363de5a27c56a18f')
mgr = owm.weather_manager()

observation = mgr.weather_at_place(city)
w = observation.weather

temperature = w.temperature('celsius')['temp']
rain = w.rain
vlajnost = w.humidity
speed = w.wind()['speed']
status = w.detailed_status

print("It's " + str(temperature) + 'Â°C' + " in " + city + " right now. " + '\nHumidity: ' + str(vlajnost) + '%' + '\nWind Speed: ' + str(speed) + '\nIn the sky: ' + str(status))
